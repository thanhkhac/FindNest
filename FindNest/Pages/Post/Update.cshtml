@page
@model FindNest.Pages.Post.UpdateModel

@{
    ViewData["Title"] = "Create";
    var inputStyle = " form-control";
    var labelStyle = "control-label fw-bold ms-1 mb-2 ";
}


<div class="row justify-content-center">
    <h1 class="text-center">Đăng tin mới</h1>
    <hr/>
    <div class="col-md-6 border p-4 rounded-3 ">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentPostUpdateVm.Title" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-t"></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.Title" class="@inputStyle"/>
                </div>
                <span asp-validation-for="RentPostUpdateVm.Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.RentCategoryId" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-house-flag"></i>
                        </span>
                    </div>
                    <select asp-for="RentPostUpdateVm.RentCategoryId" class="form-control form-select @inputStyle" asp-items="ViewBag.RentCategoryId"></select>
                </div>
            </div>
            <div>
                <div class="mt-3">
                    <label class="@labelStyle" for="">Tỉnh/Thành</label>
                    <div class="input-group">
                        <div class="input-group-prepend col-1 text-center">
                            <span class="input-group-text text-danger d-block h-100">
                                <i class="fa-solid fa-location-dot d-block"></i>
                            </span>
                        </div>
                        <select required class="form-select @inputStyle " id="citySelect">
                            <option value="" disabled selected>Chọn thành phố</option>
                            @foreach (var region in @Model.CityRegions)
                            {
                                
                                <option value="@region.Id" selected=@(Model.SelectedRegions.Contains(region))>@region.FullName</option>
                            }
                        </select>
                    </div>

                    <span asp-validation-for="RentPostUpdateVm.RegionId" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label class="@labelStyle" for="">Quận/Huyện</label>
                    <div class="input-group">
                        <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                                <i class="fa-solid fa-location-dot d-block"></i>
                            </span>
                        </div>
                        <select required class="form-select " id="districtSelect">
                            <option value="" disabled selected>Chọn huyện</option>
                            @foreach (var region in @Model.DistrictRegions)
                            {
                                <option value="@region.Id" selected=@(Model.SelectedRegions.Contains(region))>@region.FullName</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="RentPostUpdateVm.RegionId" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label class="@labelStyle" for="">Phường/Xã</label>
                    <div class="input-group">
                        <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                                <i class="fa-solid fa-location-dot d-block"></i>
                            </span>
                        </div>
                        <select required class="form-select" id="wardSelect">
                            <option value="" disabled selected>Chọn phường xã</option>
                            @foreach (var region in @Model.WardRegions)
                            {
                                <option value="@region.Id" selected=@(Model.SelectedRegions.Contains(region))>@region.FullName</option>
                            }
                        </select>
                    </div>

                    <span asp-validation-for="RentPostUpdateVm.RegionId" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.Price" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-regular fa-money-bill-1"></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.Price" type="text" pattern="\d*" maxlength="10" id="inputPrice" oninput="bindReadNumberToInput(this,'#priceText')" class="@inputStyle" value="@(Model.RentPostUpdateVm.Price != null ? Model.RentPostUpdateVm.Price : 1_000_000)"/>
                </div>
                <div>
                    <span id="priceText"></span><span>&nbsp;đồng</span>
                </div>
                <span asp-validation-for="RentPostUpdateVm.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.Area" class="@labelStyle"></label> <span class="fw-bold">(m<sup>2</sup>)</span>

                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-maximize "></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.Area" class="@inputStyle" value="15"/>
                </div>
                <span asp-validation-for="RentPostUpdateVm.Area" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.Address" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-location-dot d-block"></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.Address" class="@inputStyle"/>
                </div>
                <span asp-validation-for="RentPostUpdateVm.Address" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.BedroomQuantity" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-bed d-block "></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.BedroomQuantity" class="@inputStyle"/>
                </div>
                <span asp-validation-for="RentPostUpdateVm.BedroomQuantity" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="RentPostUpdateVm.BathroomQuantity" class="@labelStyle"></label>
                <div class="input-group">
                    <div class="input-group-prepend col-1 text-center">
                        <span class="input-group-text text-danger align-content-center d-block h-100">
                            <i class="fa-solid fa-shower d-block"></i>
                        </span>
                    </div>
                    <input asp-for="RentPostUpdateVm.BathroomQuantity" class="@inputStyle"/>
                </div>
                <span asp-validation-for="RentPostUpdateVm.BathroomQuantity" class="text-danger"></span>
            </div>
            
            
            <div class="form-group form-check mt-3">
                <label class="@labelStyle">
                    <input class="form-check-input" asp-for="RentPostUpdateVm.IsNegotiatedPrice"/> <label class="fw-bold" for=""> @Html.DisplayNameFor(model => model.RentPostUpdateVm.IsNegotiatedPrice)</label>
                </label>
            </div>

            <div class="form-group mt-3">
                <label class="@labelStyle">Hình ảnh</label>
                <div class="p-4 border rounded-3">
                    <div style="height: 200px" id="imageUploaded" class=" rounded-3 w-100 d-flex gap-2 overflow-scroll ">
                    </div>
                </div>
                <div class="">
                    <label for="imageUploadInput" class="btn rounded-3 border">
                        Thêm ảnh
                    </label>
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="RentPostUpdateVm.Description" class="@labelStyle"></label>
                <div>
                    <textarea asp-for="@Model.RentPostUpdateVm.Description" class="form-control" rows="20"></textarea>
                </div>
            </div>

            @* <div class="form-group mt-3"> *@
            @*     <label asp-for="RentPost.Thumbnail" class="control-label"></label> *@
            @*     <input asp-for="RentPost.Thumbnail" class="@inputStyle"/> *@
            @*     <span asp-validation-for="RentPost.Thumbnail" class="text-danger"></span> *@
            @* </div> *@
            

            <div class="form-group mt-3">
                <input type="submit" value="Đăng" class="btn btn-danger"/>
            </div>
            <input id="regionId" type="hidden"
                   name="@nameof(Model.RentPostUpdateVm).@nameof(@Model.RentPostUpdateVm.RegionId)"
                   value="@(Model.SelectedRegions.Count > 0 ? Model.SelectedRegions.Last().Id.ToString() : "")">
        </form>

    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<input class="form-control d-none" asp-for="@Model.RentPostUpdateVm.Images"
       id="imageUploadInput" onchange="previewImages(this,'#imageUploaded', '@nameof(Model.RentPostUpdateVm).@nameof(Model.RentPostUpdateVm.FileIndex)')" multiple type="file">
<script>
    bindReadNumberToInput('#inputPrice', '#priceText')
</script>
<script src="/js/selectRegionCreate.js"></script>
<script src="/js/previewChooseImage.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}